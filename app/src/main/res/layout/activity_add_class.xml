<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddClassActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPureBlue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="120dp"
            android:text="添加课程"
            android:textSize="30dp"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:text="课 程 名 称 :"
            android:textSize="20sp" />

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_weight="5" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:text="课 程 编 号 :"/>
    <EditText
        android:id="@+id/no_edit"
        android:layout_width="10dp"
        android:layout_marginTop="25dp"
        android:layout_weight="5"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:text="任 课 教 师 :"/>
        <EditText
            android:id="@+id/teacher_edit"
            android:layout_width="10dp"
            android:layout_marginTop="25dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_marginTop="40dp"
            android:text="上 课 时 间 :"
            />
        <Spinner
            android:id="@+id/weekday_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/weekdays"
            android:layout_marginTop="40dp"></Spinner>
        <Spinner
            android:id="@+id/hour_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/time"
            android:layout_marginTop="40dp"></Spinner>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="                  Remind me? "
            android:textSize="20sp" />

        <Switch
            android:id="@+id/reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/remind"
            android:textOn="当然"
            android:textOff="算了"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/addcourse_button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_blue"
            android:text=" 添 加 " />

        <Button
            android:id="@+id/cancel_add"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_blue"
            android:text=" 取 消 " />

    </LinearLayout>
</LinearLayout>